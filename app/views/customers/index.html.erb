# encoding: UTF-8

<div id="new-button"><%= link_to_new(new_customer_path) %></div>

<table>
  <tr>
    <th><%= t("labels.customer.name") %></th>
    <th><%= t("labels.customer.email") %></th>
    <th id="action" colspan="3"><%= t("labels.actions.head") %></th>
  </tr>

  <% @customers.each do |customer| %>
    <tr>
      <td><%= customer.name %></td>
      <td><%= customer.email %></td>
      <td id="action"><td><%= link_to 'Show', customer %></td>
      <td id="action"><td><%= link_to 'Edit', edit_customer_path(customer) %></td>
      <td id="action"><td><%= link_to 'Destroy', customer, confirm: 'Are you sure?', method: :delete %></td>
    </tr>
  <% end %>
</table>
