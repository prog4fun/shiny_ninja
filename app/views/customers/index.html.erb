# encoding: UTF-8

<div class="row-fluid">
  <div class="span9">
    <h1><%= t("activerecord.models.customers")%></h1>
  </div>
</div>


<div class="row-fluid">
  <div class="span1 offset8">
    <%= link_to_new(:controller => "customers", :action => "new") %>
  </div>
</div>

<div class="row-fluid">
  <div class="span9">

    <%= paginate @customers %>

    <table class="table table-bordered table-hover table-condensed">
      <tr>
        <th><%= t("labels.customer.name") %></th>
        <th><%= t("labels.customer.email") %></th>
        <th colspan="3"><%= t("labels.actions.head") %></th>
      </tr>

      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.name %></td>
          <td><%= customer.email %></td>
          <td style="width:5%"><%= link_to_show(customer) %></td>
          <td style="width:5%"><%= index_link_to_edit(:controller => "customers", :action => "edit", :id => customer.id) %></td>
          <td style="width:5%"><%= index_link_to_destroy(:controller => "customers", :action => "show", :id => customer.id) %></td>
        </tr>
      <% end %>
    </table>

  </div>

  <div class="span3">
    <%= render "search_bar" %>
  </div>
</div>