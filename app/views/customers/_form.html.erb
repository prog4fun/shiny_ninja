# encoding: UTF-8


<div class="row-fluid">
  <div class="span6">


    <%= form_for(@customer, :html => {:class => "form-horizontal"}) do |f| %>
      <% if @customer.errors.any? %>

        <h3 class="offset1"><%= @customer.errors.count %> <%= t("errors.form") %></h3>
        <div class="alert alert-error offset1">
          <ul>
            <% @customer.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="control-group">
        <%= f.label :name, t("labels.customer.name"), :class => "control-label" %>
        <div class="controls"><%= f.text_field :name, :class => "span9", placeholder: "#{t("labels.customer.name_explanation")}" %></div>
      </div>
      <div class="control-group">
        <%= f.label :email, t("labels.customer.email"), :class => "control-label" %>
        <div class="controls">
          <div class="input-prepend">
            <span class="add-on">@</span>
            <%= f.email_field :email, :class => "span10", placeholder: "#{t("labels.customer.email_explanation")}" %>
          </div>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :comment, t("labels.uiverse.comment"), :class => "control-label" %>
        <div class="controls"><%= f.text_area :comment, :class => "span7", :size => "50x10", placeholder: "#{t("labels.universe.comment_explanation")}" %></div>
      </div>
      <%= f.hidden_field :user_id, :value => current_user.id %>

      <div class="form-actions">
        <button type="submit" class="btn btn-success"><%= t("labels.actions.save") %></button>
        <%= cancel_link %>
      </div>

    <% end %>
  </div>
</div>