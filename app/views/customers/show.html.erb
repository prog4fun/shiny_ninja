# encoding: UTF-8

<div class="page-header">
  <h1><%= t("activerecord.models.customer")%> "<%= @customer.name %>"</h1>
</div>


<div class="row">
  <div class="col-md-9">

    <div class="table-responsive">
      <table class="table table-bordered table-hover table-condensed">
        <tr>
          <th><%= t("labels.customers.name") %></th>
          <td><%= @customer.name %></td>
        </tr>
        <tr>
          <th><%= t("labels.customers.email") %></th>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <th><%= t("labels.universe.comment") %></th>
          <td><%= @customer.comment %></td>
        </tr>
      </table>
    </div>

  </div>

  <div class="col-md-1">
    <div class="btn-group-vertical">
      <%= show_link_to_index(:controller => "customers", :action => "index") %>
      <%= show_link_to_edit(:controller => "customers", :action => "edit", :id => @customer.id) %>
      <%= show_link_to_destroy(:controller => "customers", :action => "show", :id => @customer.id) %>
    </div>
  </div>

</div>
