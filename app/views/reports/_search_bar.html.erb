<%= form_tag( reports_path, :method => 'get', :role => "form") do %>
  <fieldset>
    <legend>
      <i class="glyphicon glyphicon-search" alt="<%= t("labels.actions.search") %>" title="<%= t("labels.actions.search_explanation") %>"></i>
      <%= t("labels.actions.search_head") %>
      <button type="button" class="sidebar-toggle"  data-toggle="collapse" data-target=".sidebar-collapse" title="<%= t("labels.actions.search_toggle") %>">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </legend>
    <div class="<%= search_active? ? "sidebar-collapse in" : "sidebar-collapse collapse" %>">
      <div class="form-group">
        <%= label_tag("[search][date_from]", t("labels.datetime.date_from")) %>
        <%# text_field_tag("[search][date_from]", params[:search][:date_from], :size => 4, :class => "datepicker form-control") %>
        <input class="datepicker form-control" id="_search_date_from" name="[search][date_from]" size="4" type="date">
      </div>

      <div class="form-group">
        <%= label_tag("[search][date_to]", t("labels.datetime.date_to")) %>
        <%# text_field_tag("[search][date_to]", params[:search][:date_to], :size => 4, :class => "datepicker form-control") %>
        <input class="datepicker form-control" id="_search_date_to" name="[search][date_to]" size="4" type="date">
      </div>

      <% unless @evaluate_page %>
        <div class="form-group">
          <%= label_tag("[search][customer]", t("activerecord.models.customer")) %>
          <%= select_tag("[search][customer]", options_for_select(@customers.order("name ASC").collect{ |c| [c.name, c.id] }, params[:search][:customer]), :prompt => t("labels.universe.empty_search_option"), :class => "form-control") %>
        </div>

        <div class="form-group">
          <%= label_tag("[search][project]", t("activerecord.models.project")) %>
          <%= select_tag("[search][project]", options_for_select(@projects.order("name ASC").collect{ |p| [p.name, p.id] }, params[:search][:project]), :prompt => t("labels.universe.empty_search_option"), :class => "form-control") %>
        </div>

      <% else %>
        <%= hidden_field_tag "projects_user", params[:projects_user] %>
      <% end %>

      <button type="submit" class="btn btn-info"><i class="icon-search" alt="<%= t("labels.actions.search") %>" title="<%= t("labels.actions.search_explanation") %>"></i> <%= t("labels.actions.search") %></button>
      <a class="btn btn-default btn-xs" href="<%= url_for(reports_path :projects_user => params[:projects_user]) %>"><i class="glyphicon glyphicon-refresh" alt="<%= t("labels.actions.reset") %>" title="<%= t("labels.actions.reset") %>"></i> <%= t("labels.actions.reset") %></a> 

    </div>
  </fieldset>
<% end %>