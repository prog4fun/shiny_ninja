# encoding: UTF-8

<div class="page-header">
  <h1><%= t("labels.actions.password_reset")%></h1>
</div>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => "form-horizontal", :role => "form" } ) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
    <%= f.label :password, t("activerecord.attributes.user.password") + " *", :class => "col-lg-2 control-label" %>
    <div class="col-lg-4"><%= f.password_field :password, :class => "form-control", placeholder: "#{t("activerecord.attributes.user.password_explanation")}" %></div>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation, t("activerecord.attributes.user.password_cofirmation") + " **", :class => "col-lg-2 control-label" %>
    <div class="col-lg-4"><%= f.password_field :password_confirmation, :class => "form-control", placeholder: "#{t("activerecord.attributes.user.password_cofirmation_explanation")}" %></div>
  </div>

  <div class="form-group">
    <div class="col-lg-3 col-lg-offset-2">
      <div class="btn-group">
        <button type="submit" class="btn btn-success"><%= t("labels.actions.password_reset") %></button>
        <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown">
          <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" role="menu">
          <%= render "devise/shared/links" %>
        </ul>
      </div>
    </div>
  </div>
  <div class="text-muted col-lg-6 col-lg-offset-2">
    <%= t("labels.universe.mandatory_field_explanation") %>
  <% end %>
</div>
