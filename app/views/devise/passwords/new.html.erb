# encoding: UTF-8

<div class="page-header">
  <h1><%= t("labels.actions.password_reset")%></h1>
</div>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "form-horizontal", :role => "form" }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email, t("activerecord.attributes.user.email") + " *", :class => "col-lg-2 control-label" %>
    <div class="col-lg-4">
      <div class="input-group">
        <span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></span>
        <%= f.email_field :email, :class => "form-control", placeholder: "#{t("activerecord.attributes.user.email_explanation")}" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-3 col-lg-offset-2">
      <button type="submit" class="btn btn-success"><%= t("labels.actions.password_reset") %></button>
    </div>
  </div>
  <div class="text-muted col-lg-6 col-lg-offset-2">
    <%= t("labels.universe.mandatory_field_explanation") %>
  <% end %>
</div>