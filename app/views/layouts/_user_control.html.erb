# encoding: UTF-8
<ul class="nav navbar-nav navbar-right hidden-xs">
<% if user_signed_in? %>

  <div class="btn-group">
    <% if current_user.is? :administrator %>
      <% url = url_for(:controller => "users", :action => "adm_show", :id => current_user.id) %>
    <% elsif current_user.is? :time_tracker %>
      <% url = url_for(:controller => "users", :action => "tt_show", :id => current_user.id) %>
    <% elsif current_user.is? :project_evaluator %>
      <% url = url_for(:controller => "users", :action => "pe_show") %>
    <% end %>
    <a class="btn btn-default" href="<%= url %>">Hey, <%= current_user.firstname %>!</a>
    <a class="btn btn-danger" href="<%= destroy_user_session_path %>" data-method="delete" rel="nofollow">Abmelden</a>
  </div>

<% else %>

  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "navbar-form navbar-right"}) do |f| %>
    <div class="form-group">
      <%= f.text_field :login, :class => "form-control", placeholder: "#{t("activerecord.attributes.user.login")}"  %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, :class => "form-control", placeholder: "#{t("activerecord.attributes.user.password")}"  %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <%= f.hidden_field :remember_me, :value => true %>
    <% end -%>

    <button type="submit" class="btn btn-success"><%= t("labels.actions.login") %></button>
  <% end %>

<% end %>
</ul>