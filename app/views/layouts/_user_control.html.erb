# encoding: UTF-8

<% if user_signed_in? %>

  <div class="btn-group">
    <% if current_user.is? :administrator %>
      <% url = url_for(:controller => "users", :action => "adm_show", :id => current_user.id) %>
    <% elsif current_user.is? :time_tracker %>
      <% url = url_for(:controller => "users", :action => "tt_show", :id => current_user.id) %>
    <% elsif current_user.is? :project_evaluator %>
      <% url = url_for(:controller => "users", :action => "pe_show") %>
    <% end %>
    <a class="btn" href="<%= url %>"><%= t("labels.person.my_account") %></a>
    <a class="btn btn-danger" href="<%= destroy_user_session_path %>" data-method="delete" rel="nofollow">Abmelden</a>
  </div>

<% else %>

  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form-inline"}) do |f| %>
    <%= f.text_field :login, :class => "input-small", placeholder: "#{t("activerecord.attributes.user.login")}"  %>
    <%= f.password_field :password, :class => "input-small", placeholder: "#{t("activerecord.attributes.user.password")}"  %>

    <% if devise_mapping.rememberable? -%>
      <label class="checkbox">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </label>
    <% end -%>

    <button type="submit" class="btn btn-success"><%= t("labels.actions.login") %></button>
  <% end %>

<% end %>