# encoding: UTF-8
<ul class="nav navbar-nav navbar-right hidden-xs">
  <% if user_signed_in? %>

    <div class="btn-group hidden-xs">
      <a class="btn btn-default" href="<%= user_path(current_user) %>">Hey, <%= current_user.firstname %>!</a>
      <a class="btn btn-danger" href="<%= destroy_user_session_path %>" data-method="delete" rel="nofollow"><%= t('labels.actions.logout') %></a>
    </div>

  <% else %>

    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "navbar-form navbar-right"}) do |f| %>
      <div class="form-group">
        <%= f.text_field :login, :class => "form-control", placeholder: "#{t("activerecord.attributes.user.login")}", size: 20  %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, :class => "form-control", placeholder: "#{t("activerecord.attributes.user.password")}", size: 20  %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <%= f.hidden_field :remember_me, :value => true %>
      <% end -%>

      <div class="btn-group">
        <button type="submit" class="btn btn-success hidden-xs"><%= t("labels.actions.login") %></button>
        <button type="button" class="btn btn-success hidden-xs dropdown-toggle" data-toggle="dropdown">
          <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" role="menu">
          <%= render "devise/shared/links" %>
        </ul>
      </div>


    <% end %>

  <% end %>
</ul>
