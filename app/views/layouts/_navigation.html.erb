# encoding: UTF-8

<% if user_signed_in? %>
  <% @active_menu == "user" ? css_user_class = "active":css_user_class = "nav"  %>
  <li class="<%= @active_menu == "report" ? "active" : "nav" %>"><%= link_to t('activerecord.models.reports'), reports_path %></li>
  <% if current_user.is? :administrator || :time_tracker %>
    <li class='<%= @active_menu == "project" ? "active" : "nav" %>'><%= link_to t('activerecord.models.projects'), projects_path %></li>
    <li class='<%= @active_menu == "customer" ? "active" : "nav" %>'><%= link_to t('activerecord.models.customers'), customers_path %></li>
    <li class='<%= @active_menu == "service" ? "active" : "nav" %>'><%= link_to t('activerecord.models.services'), services_path %></li>
    <% if current_user.is? :administrator %>
      <li class='<%= css_user_class %>'><%= link_to t('activerecord.models.users'), :controller => "users", :action => "adm_index" %></li>
      <% url = url_for(:controller => "users", :action => "adm_show", :id => current_user.id) %>
    <% elsif current_user.is? :time_tracker %>
      <li class='<%= css_user_class %>'><%= link_to t('labels.roles.projectevaluator'), :controller => "users", :action => "tt_index" %></li>
      <% url = url_for(:controller => "users", :action => "tt_show", :id => current_user.id) %> <% end %>
  <% elsif current_user.is? :project_evaluator %>
    <% url = url_for(:controller => "users", :action => "pe_show") %>
  <% end %>

  <li class='visible-xs'><a href="<%= url %>"><%= t('labels.person.my_account') %></a></li>
  <li class='nav danger visible-xs'> <a href="<%= destroy_user_session_path %>" data-method="delete" rel="nofollow">Abmelden</a></li>

<% else %>
  <li class='nav success visible-xs'><%= link_to(t('labels.actions.login'), new_user_session_path)  %></li>

<% end %>
