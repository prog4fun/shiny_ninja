      <li class=<%= css_user_class %>><%= link_to t('activerecord.models.users'), :controller => "users", :action => "adm_index" %></li>
    <% else %>
      <li class=<%= css_user_class %>><%= link_to t('activerecord.models.users'), users_path %></li>
    <% end %>
  <% end %>
