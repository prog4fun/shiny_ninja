# encoding: UTF-8

<!DOCTYPE html>
<html>
  <head>
    <title>Shiny-Ninja</title>
<%#= stylesheet_link_tag    "application", :media => "all" %>
    <%= stylesheet_link_tag    "bootstrap", :rel => "stylesheet" %>
    <%= stylesheet_link_tag    "jquery-ui-1.10.3.custom", :rel => "stylesheet" %>
    <%= javascript_include_tag "application" %>
<%#<script src="//code.jquery.com/jquery.js"></script> %>
    <%= javascript_include_tag "jquery-1.9.1" %>
    <%= javascript_include_tag "bootstrap" %>
    <%= javascript_include_tag "jquery-ui-1.10.3.custom" %>
    <%= javascript_include_tag "my_functions.js" %>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= csrf_meta_tags %>


  </head>
  <body> { padding-top: 60px; }

    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#">ShinyNinja</a>
      </div>

      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <%= render "layouts/navigation" %>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <%= render "layouts/user_control" %>
        </ul>
      </div>
    </nav>

<%#= render "layouts/breadcrumbs" %> 
    <%= render "layouts/alerts" %> 

    <div class="container">
      <%= yield %>
    </div>


    <footer class="modal-footer" role="contentinfo">
      <div class="container">
        <%= render "layouts/footer" %>

      </div>
    </footer>

  </body>
</html>
