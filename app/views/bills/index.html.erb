# encoding: UTF-8

<div class="page-header">
  <h1><%= t("activerecord.models.bills")%></h1>
</div>


<div class="row">
  <div class="col-md-1 col-md-offset-8">
    <%= link_to_new(:controller => "bills", :action => "new") %>
  </div>
</div>

<div class="row">
  <div class="col-md-9">

    <div class="table-responsive">
      <table class="table table-bordered table-hover table-condensed">
        <tr>
          <th><%= t("activerecord.attributes.bill.number")%></th>
          <th><%= t("activerecord.attributes.bill.date")%></th>
          <th><%= t("activerecord.attributes.bill.task_period")%></th>
          <th><%= t("activerecord.attributes.bill.customer")%></th>
          <th colspan="3"><%= t("labels.actions.head") %></th>
        </tr>

        <% @bills.each do |bill| %>
          <% bill.paid ? bill_class='': bill_class=' class=danger' %>
          <tr<%= bill_class %>>
            <td><%= bill.number %></td>
            <td><%= bill.date %></td>
            <td><%= label_for_month(bill.month) %> (<%= bill.year %>)</td>
            <td><%= bill.customer.name %></td>
            <td style="width:5%"><%= link_to_show(bill) %></td>
            <%= index_link_to_edit(:controller => "bills", :action => "edit", :id => bill.id) %></td>
            <%= index_link_to_destroy(:controller => "bills", :action => "show", :id => bill.id) %></td>
          </tr>
        <% end %>
      </table>
    </div>

    <div class="col-md-offset-4"><%= paginate @bills %></div>
  </div>

  <div class="col-md-3">
    <%= render "search_bar" %>
  </div>

</div>         