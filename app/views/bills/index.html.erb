<h1>Listing bills</h1>

<table>
  <tr>
    <th>Number</th>
    <th>Date</th>
    <th>Month</th>
    <th>Year</th>
    <th>Amount</th>
    <th>Paid</th>
    <th>Comment</th>
    <th>Customer</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bills.each do |bill| %>
  <tr>
    <td><%= bill.number %></td>
    <td><%= bill.date %></td>
    <td><%= bill.month %></td>
    <td><%= bill.year %></td>
    <td><%= bill.amount %></td>
    <td><%= bill.paid %></td>
    <td><%= bill.comment %></td>
    <td><%= bill.customer_id %></td>
    <td><%= link_to 'Show', bill %></td>
    <td><%= link_to 'Edit', edit_bill_path(bill) %></td>
    <td><%= link_to 'Destroy', bill, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

