# encoding: UTF-8

<div class="page-header">
  <h1><%= t("activerecord.models.bill")%> "<%= @bill.number %>"</h1>
</div>


<div class="row">
  <div class="col-md-9">

    <div class="table-responsive">
      <table class="table table-bordered table-hover table-condensed">
        <tr>
          <th><%= t("activerecord.attributes.bill.number") %></th>
          <td><%= @bill.number %></td>
        </tr>
        <tr>
          <th><%= t("activerecord.attributes.bill.date") %></th>
          <td><%= @bill.date %></td>
        </tr>
        <tr>
          <th><%= t("activerecord.attributes.bill.task_period") %></th>
          <td><%= label_for_month(@bill.month) %> (<%= @bill.year %>)</td>
        </tr>
        <tr>
          <th><%= t("activerecord.attributes.bill.amount") %></th>
          <td><%= @bill.amount %> â‚¬</td>
        </tr>
        <tr>
          <th><%= t("activerecord.attributes.bill.paid") %></th>
          <td><%= icon_boolean(@bill.paid) %></td>
        </tr>
        <tr>
          <th><%= t("activerecord.attributes.bill.customer") %></th>
          <td><%= @bill.customer.name %></td>
        </tr>
        <tr>
          <th><%= t("labels.universe.comment") %></th>
          <td><%= @bill.comment %></td>
        </tr>
      </table>
    </div>

  </div>

  <div class="col-md-1">
    <div class="btn-group-vertical">
      <%= show_link_to_index(:controller => "bills", :action => "index") %>
      <%= show_link_to_edit(:controller => "bills", :action => "edit", :id => @bill.id) %>
      <%= show_link_to_destroy(:controller => "bills", :action => "show", :id => @bill.id) %>
    </div>
  </div>

</div>
