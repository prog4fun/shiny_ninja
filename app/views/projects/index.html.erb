# encoding: UTF-8

<div class="row-fluid">
  <div class="span9">
    <h1><%= t("activerecord.models.projects")%></h1>
  </div>
</div>


<div class="row-fluid">
  <div class="span1 offset8">
    <%= link_to_new(:controller => "projects", :action => "new") %>
  </div>
</div>

<div class="row-fluid">
  <div class="span9">

    <%= paginate @projects %>

    <table class="table table-bordered table-hover table-condensed">
      <tr>
        <th><%= t("labels.project.name") %></th>
        <th><%= t("activerecord.models.customer") %></th>
        <th colspan="3"><%= t("labels.actions.head") %></th>
      </tr>

      <% @projects.each do |project| %>
        <tr>
          <td><%= project.name %></td>
          <td><%= project.customer.name %></td>
          <td style="width:5%"><%= link_to_show(project) %></td>
          <td style="width:5%"><%= index_link_to_edit(:controller => "projects", :action => "edit", :id => project.id) %></td>
          <td style="width:5%"><%= index_link_to_destroy(:controller => "projects", :action => "show", :id => project.id) %></td>
        </tr>
      <% end %>
    </table>

  </div>

  <div class="span3">
    <%= render "search_bar" %>
  </div>
</div>