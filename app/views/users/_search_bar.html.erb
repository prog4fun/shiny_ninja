# encoding: UTF-8


<%= form_tag(users_path, :method => 'get', :role => "form") do %>
  <fieldset>
    <legend>
      <i class="glyphicon glyphicon-search" alt="<%= t("labels.actions.search") %>" title="<%= t("labels.actions.search_explanation") %>"></i>
      <%= t("labels.actions.search_head") %>
      <a class="btn btn-default btn-xs" href="<%= users_path %>"><i class="glyphicon glyphicon-refresh" alt="<%= t("labels.actions.reset") %>" title="<%= t("labels.actions.reset") %>"></i> <%= t("labels.actions.reset") %></a></legend>

    <div class="form-group">
      <%= label_tag("[search][firstname]", t("activerecord.attributes.user.firstname")) %>
      <%= text_field_tag("[search][firstname]", params[:search][:firstname], :class => "form-control") %>
    </div>

    <div class="form-group">
      <%= label_tag("[search][lastname]", t("activerecord.attributes.user.lastname")) %>
      <%= text_field_tag("[search][lastname]", params[:search][:lastname], :class => "form-control") %>
    </div>

    <button type="submit" class="btn btn-info"><i class="icon-search" alt="<%= t("labels.actions.search") %>" title="<%= t("labels.actions.search_explanation") %>"></i> <%= t("labels.actions.search") %></button>    

  </fieldset>
<% end %>
