# encoding: UTF-8

<form>
  <fieldset>
    <legend>
      <%= t("labels.actions.search_head") %>
      <a class='btn btn-mini' href='<%= users_path %>'><i class='icon-refresh' alt='<%= t("labels.actions.reset") %>' title='<%= t("labels.actions.reset") %>'></i> <%= t("labels.actions.reset") %></a>
    </legend>
    
    <%= form_tag users_path, :method => 'get' do %>

      <label><%= label_tag("[search][firstname]", t("activerecord.attributes.user.firstname")) %></label>
      <%= text_field_tag("[search][firstname]", params[:search][:firstname]) %>

      <label><%= label_tag("[search][lastname]", t("activerecord.attributes.user.lastname")) %></label>
      <%= text_field_tag("[search][lastname]", params[:search][:lastname]) %>

      <button type="submit" class="btn btn-info"><i class="icon-search" alt="<%= t("labels.actions.search") %>" title="<%= t("labels.actions.search_explonation") %>"></i> <%= t("labels.actions.search") %></a>    
    <% end %>
  </fieldset>
</form>

