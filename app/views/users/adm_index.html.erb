# encoding: UTF-8

<div id="new-button"><%= link_to_new(new_user_path) %></div>

<%= paginate @users %>

<table>
  <tr>
    <th><%= t("labels.person.login") %></th>
    <th><%= t("labels.person.firstname") %></th>
    <th><%= t("labels.person.lastname") %></th>
    <th id="action" colspan="3"><%= t("labels.actions.head") %></th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.login %></td>
      <td><%= user.firstname %></td>
      <td><%= user.lastname %></td>
      <td id="action"><%= link_to t("labels.actions.show"), :controller => "users", :action => "adm_show", :id => user.id %></td>
      <td id="action"><%= link_to t("labels.actions.edit"), :controller => "users", :action => "adm_edit", :id => user.id %></td>
      <td id="action"><%= link_to_destroy(user, confirm: t("labels.actions.confirm"), method: :delete) %></td>
    </tr>
  <% end %>
</table>