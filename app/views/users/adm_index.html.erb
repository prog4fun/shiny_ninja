# encoding: UTF-8

<div class="page-header">
  <h1><%= t("activerecord.models.users")%></h1>
</div>


<div class="row">
  <div class="col-md-1 col-md-offset-8">
    <%= link_to_new(:controller => "users", :action => "adm_new") %>
  </div>
</div>

<div class="row">
  <div class="col-md-9">

    <%= paginate @users %>

    <div class="table-responsive">
      <table class="table table-bordered table-hover table-condensed">
        <tr>
          <th><%= t("activerecord.attributes.user.login") %></th>
          <th><%= t("activerecord.attributes.user.firstname") %></th>
          <th><%= t("activerecord.attributes.user.lastname") %></th>
          <th id="action" colspan="3"><%= t("labels.actions.head") %></th>
        </tr>

        <% @users.each do |user| %>
          <%
          if user.is? :administrator
            tr_class = "danger"
            elsif user.is? :time_tracker
            tr_class = "warning"
            elsif user.is? :project_evaluator
            tr_class = "success"
            end
        %>
          <tr class=<%= tr_class %>>
            <td><%= user.login %></td>
            <td><%= user.firstname %></td>
            <td><%= user.lastname %></td>
            <td style="width:5%"><%= link_to_show(:controller => "users", :action => "adm_show", :id => user.id) %></td>
            <%= index_link_to_edit(:controller => "users", :action => "adm_edit", :id => user.id) %></td>
            <%= index_link_to_destroy(:controller => "users", :action => "show", :id => user.id) %></td>
          </tr>
        <% end %>
      </table>
    </div>

  </div>

  <div class="col-md-3">
    <%= render "search_bar" %>
  </div>

</div>