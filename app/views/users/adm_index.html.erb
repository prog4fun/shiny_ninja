# encoding: UTF-8

<div class="row-fluid">
  <div class="span9">
    <h1><%= t("activerecord.models.users")%></h1>
  </div>
</div>


<div class="row-fluid">
  <div class="span1 offset8">
    <%= link_to_new(:controller => "users", :action => "adm_new") %>
  </div>
</div>

<div class="row-fluid">
  <div class="span9">

    <%= paginate @users %>

    <table class="table table-bordered table-hover table-condensed">
      <tr>
        <th><%= t("activerecord.attributes.user.login") %></th>
        <th><%= t("activerecord.attributes.user.firstname") %></th>
        <th><%= t("activerecord.attributes.user.lastname") %></th>
        <th id="action" colspan="3"><%= t("labels.actions.head") %></th>
      </tr>

      <% @users.each do |user| %>
        <tr>
          <td><%= user.login %></td>
          <td><%= user.firstname %></td>
          <td><%= user.lastname %></td>
          <td style="width:5%"><%= link_to_show(:controller => "users", :action => "adm_show", :id => user.id) %></td>
          <td style="width:5%"><%= index_link_to_edit(:controller => "users", :action => "adm_edit", :id => user.id) %></td>
          <td style="width:5%"><%= index_link_to_destroy(:controller => "users", :action => "show", :id => user.id) %></td>
        </tr>
      <% end %>
    </table>

  </div>

  <div class="span3">
    <%= render "search_bar" %>
  </div>
</div>