# encoding: UTF-8

<div class="row-fluid">
  <div class="span7 offset1">
    <h1><%= t("activerecord.models.user") %> <%= @user.firstname + @user.lastname %></h1>
  </div>
</div>


<div class="row-fluid">
  <div class="span3 offset6 ">
    <%= show_link_to_edit(:controller => "users", :action => "adm_edit", :id => @user.id) %>
    <%= show_link_to_destroy(:controller => "users", :action => "show", :id => @user.id) %>
  </div>
</div>

<div class="row-fluid">
  <div class="span7 offset1">

    <table class="table table-hover">
      <tr>
        <th><%= t("labels.person.login") %></th>
        <td><%= @user.login %></td>
      </tr>

      <tr>
        <th><%= t("labels.person.firstname") %></th>
        <td><%= @user.firstname %></td>
      </tr>
      <tr>
        <th><%= t("labels.person.lastname") %></th>
        <td><%= @user.lastname %></td>
      </tr>
      <tr>
        <th><%= t("labels.person.email") %></th>
        <td><%= @user.email %></td>
      </tr>
      <tr>
        <th><%= t("labels.person.phone_number") %></th>
        <td><%= @user.phone_number %></td>
      </tr>
      <tr>
        <th><%= t("labels.person.sreet_and_number") %></th>
        <td><%= @user.street %> <%= @user.street_number %></td>
      </tr>
      <tr>
        <th><%= t("labels.person.zipcode_and_city") %></th>
        <td><%= @user.zipcode %><%= ", " if @user.city.present? %><%= @user.city %></td>
      </tr>
      <tr>
        <th><%= t("labels.person.country") %></th>
        <td><%= @user.country %></td>
      </tr>
      <tr>
        <th><%= t("labels.person.bank_code_and_name") %></th>
        <td><%= @user.bank_code %><%= ", " if @user.bank_name.present? %><%= @user.bank_name %></td>
      </tr>
      <tr>
        <th><%= t("labels.person.bank_account_number") %></th>
        <td><%= @user.bank_account_number %></td>
      </tr>
      <tr>
        <th><%= t("labels.person.tax_number") %></th>
        <td><%= @user.tax_number %></td>
      </tr>
<%#
<tr>
<th><= t("labels.person.signature") ></th>
<td><= @user.signature ></td>
</tr>
%>
      <tr>
        <th><%= t("labels.person.roles") %></th>
        <td>
          <% i = @user.roles.count %>
          <% @user.roles.each do |role| %>
            <%= role.humanize %> <%= ", " if i > 1 %>
            <% i -= 1 %>
          <% end %>
        </td>
      </tr>
      <tr>
        <th><%= t("labels.person.creator") %></th>
        <td><%= @creator.login %></td>
      </tr>
      <tr>
        <th><%= t("labels.universe.comment") %></th>
        <td><%= @user.comment %></td>
      </tr>
    </table>

  </div>
</div>