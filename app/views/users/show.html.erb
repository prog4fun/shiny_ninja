# encoding: UTF-8

<div class="page-header">
  <h1><%= t("activerecord.models.user") %> "<%= @user.firstname %> <%= @user.lastname %>"</h1>
</div>

<div class="row">
  <div class="col-md-9">

    <div class="table-responsive">
      <table class="table table-bordered table-hover table-condensed">
        <tr>
          <th><%= t("activerecord.attributes.user.login") %></th>
          <td><%= @user.login %></td>
        </tr>

        <tr>
          <th><%= t("activerecord.attributes.user.firstname") %></th>
          <td><%= @user.firstname %></td>
        </tr>
        <tr>
          <th><%= t("activerecord.attributes.user.lastname") %></th>
          <td><%= @user.lastname %></td>
        </tr>
        <tr>
          <th><%= t("activerecord.attributes.user.email") %></th>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <th><%= t("activerecord.attributes.user.phone_number") %></th>
          <td><%= @user.phone_number %></td>
        </tr>
        <tr>
          <th><%= t("activerecord.attributes.user.address") %></th>
          <td><%= @user.street %> <%= @user.street_number %><br>
          <%= @user.zipcode %><%= " " if @user.city.present? %><%= @user.city %><br>
          <%= @user.country %></td>
        </tr>
        <tr>
          <th><%= t("activerecord.attributes.user.bank_account_number") %></th>
          <td><%= @user.bank_account_number %></td>
        </tr>
        <tr>
          <th><%= t("activerecord.attributes.user.bank_code_and_name") %></th>
          <td><%= @user.bank_code %><%= ", " if @user.bank_name.present? %><%= @user.bank_name %></td>
        </tr>
        <tr>
          <th><%= t("activerecord.attributes.user.tax_number") %></th>
          <td><%= @user.tax_number %></td>
        </tr>

        <% if current_user.is? :administrator %>
          <%= render 'role_items' %>
        <% end %>

        <tr>
          <th><%= t("labels.universe.comment") %></th>
          <td><%= @user.comment %></td>
        </tr>
      </table>
    </div>

  </div>

  <div class="col-md-1">
    <div class="btn-group-vertical">
      <%= show_link_to_index(:controller => "users", :action => "index") %>
      <%= show_link_to_edit(:controller => "users", :action => "edit", :id => @user.id) %>
      <%= show_link_to_destroy(:controller => "users", :action => "show", :id => @user.id) %>
    </div>
  </div>

</div>




