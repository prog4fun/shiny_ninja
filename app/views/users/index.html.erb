<h1>Listing users</h1>

<table>
  <tr>
    <th>Login</th>
    <th>Firstname</th>
    <th>Lastname</th>
    <th>Email</th>
    <th>Password</th>
    <th>Phone number</th>
    <th>Street</th>
    <th>Street number</th>
    <th>Zipcode</th>
    <th>City</th>
    <th>Country</th>
    <th>Bank name</th>
    <th>Bank number code</th>
    <th>Bank account number</th>
    <th>Taxnumber</th>
    <th>Signatur path</th>
    <th>User types</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.login %></td>
    <td><%= user.firstname %></td>
    <td><%= user.lastname %></td>
    <td><%= user.email %></td>
    <td><%= user.password %></td>
    <td><%= user.phone_number %></td>
    <td><%= user.street %></td>
    <td><%= user.street_number %></td>
    <td><%= user.zipcode %></td>
    <td><%= user.city %></td>
    <td><%= user.country %></td>
    <td><%= user.bank_name %></td>
    <td><%= user.bank_number_code %></td>
    <td><%= user.bank_account_number %></td>
    <td><%= user.taxnumber %></td>
    <td><%= user.signatur_path %></td>
    <td><%= user.user_types %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

