# encoding: UTF-8

<div class="row-fluid">
  <div class="span7 offset1">
    <h1><%= t("activerecord.models.service") %> "<%= @service.name %>"</h1>
  </div>
</div>


<div class="row-fluid">
  <div class="span3 offset6 ">
    <%= show_link_to_edit(:controller => "services", :action => "edit", :id => @service.id) %>
    <%= show_link_to_destroy(:controller => "services", :action => "show", :id => @service.id) %>
  </div>
</div>

<div class="row-fluid">
  <div class="span7 offset1">

    <table class="table table-hover">
      <tr>
        <th><%= t("labels.service.name") %></th>
        <td><%= @service.name %></td>
      </tr>
      <tr>
        <th><%= t("labels.service.wage") %></th>
        <td><%= @service.wage %></td>
      </tr>
      <tr>
        <th><%= t("labels.service.billable") %></th>
        <td><%= @service.billable %></td>
      </tr>
      <tr>
        <th><%= t("labels.universe.comment") %></th>
        <td><%= @service.comment %></td>
      </tr>
    </table>

  </div>
</div>