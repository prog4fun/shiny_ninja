# encoding: UTF-8


<div class="row-fluid">
  <div class="span6">


    <%= form_for(@service, :html => {:class => "form-horizontal"}) do |f| %>
      <% if @service.errors.any? %>

        <h3 class="offset1"><%= @service.errors.count %> <%= t("errors.form") %></h3>
        <div class="alert alert-error offset1">
          <ul>
            <% @service.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="control-group">
        <%= f.label :name, t("labels.service.name") + " *", :class => "control-label" %>
        <div class="controls"><%= f.text_field :name, placeholder: "#{t("labels.universe.label")}" %></div>
      </div>
      <div class="control-group">
        <%= f.label :wage, t("activerecord.attributes.service.wage") + " *", :class => "control-label" %>
        <div class="controls">
          <div class="input-prepend">
            <span class="add-on">â‚¬</span>
            <%= f.text_field :wage, :class => "span4", placeholder: "#{t("activerecord.attributes.service.wage_explanation")}" %>
          </div>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :billable, t("labels.service.billable"), :class => "control-label" %>
        <div class="controls"><%= f.check_box :billable %></div>
      </div>
      <div class="control-group">
        <%= f.label :comment, t("labels.universe.comment"), :class => "control-label" %>
        <div class="controls"><%= f.text_area :comment, :class => "span7", :size => "50x10", placeholder: "#{t("labels.universe.comment_explanation")}" %></div>
      </div>
      <%= f.hidden_field :user_id, :value => current_user.id %>
        
        <div class="muted offset1"><%= t("labels.universe.mandatory_field_explanation") %></div>

      <div class="form-actions">
        <button type="submit" class="btn btn-success"><%= t("labels.actions.save") %></button>
        <%= cancel_link %>
      </div>

    <% end %>
  </div>
</div>

